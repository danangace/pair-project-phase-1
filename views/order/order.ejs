<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <%- include('../partials/meta') %>
    <!-- Bootstrap CSS -->
    <%- include('../partials/css') %>
  <style>
  </style>
  </head>
  <body>
    <%- include('../partials/navbar') %>
    <div class="container px-lg-5">
        <div class="row mx-lg-n5">
          <div class="col py-3 px-lg-5 border bg-light" style="margin-top: 100px;">
              <img src="<%= event.image %>">
          </div>
          <div class="col py-3 px-lg-5 border bg-light" style="margin-top: 100px;">
              <h3>Event Name</h3>
              <p><%= event.name %></p>
              <h3>Schedule</h3>
              <p><%= event.schedule %></p>
              <h3>Available Tickets</h3>
              <p><%= event.stock%> Tickets</p>
              <h3>Venue</h3>
              <p><%= event.venue %> </p>
              <h3>Ticket Price</h3>
              <p>Rp.<%= event.price %> </p>
              <form style="margin-top:20px;" method="post" action="">
                  <div class="form-group row">
                      <label for="inputQuantity" class="col-sm-2 col-form-label">Qty</label>
                      <div class="col-sm-10">
                          <input type="number" class="form-control" id="inputQuantity" name="quantity" value="">
                      </div>
                  </div>
                  <input type="submit" class="btn btn-primary">
              </form>
          </div>
        </div>
    </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <%- include('../partials/script') %>
    <script>
      $('.carousel').carousel({
          interval: 2000
      })  
    </script>
  </body>
</html>