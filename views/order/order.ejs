<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <%- include('../partials/meta') %>
    <!-- Bootstrap CSS -->
    <%- include('../partials/css') %>
  <style>
  </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
              <li class="nav-item">
                <a class="nav-link" href="#">Home</a>
              </li>
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  Event
                </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                      <a class="dropdown-item" href="#">Concert</a>
                      <a class="dropdown-item" href="#">Conference</a>
                      <a class="dropdown-item" href="#">Workshop</a>
                    </div>
                </li>
            </ul>
              <h4>Welcome <%= customer.name %></h4>
            <div class="nav-item dropdown">
              <button class="nav-link dropdown-toggle" type="submit" style="margin: 0px 5px;" type="button" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Your Account</button>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                  <a class="dropdown-item" href="#">Edit Profile</a>
                  <a class="dropdown-item" href="/customers/<%= customer.id%>/logout">Logout</a>
              </div>
            </div>
          </div>
    </nav>
    <div class="container" style="margin-top:0%;">
        <div class="row">
            <div class="col py-3 px-lg-5 border bg-light" style="margin-top: 100px;">
                <img src="<%= event.image %>">
            </div>
        <div class="col">
            <div class="col py-3 px-lg-5 border bg-light" style="margin-top: 100px;">
                <h3>Event Name</h3>
                <p><%= event.name %></p>
                <h3>Schedule</h3>
                <p><%= event.schedule %></p>
                <h3>Available Tickets</h3>
                <p><%= event.seats%>/<%= event.maxSeats%> Tickets</p>
                <h3>Venue</h3>
                <p><%= event.venue %> </p>
                <h3>Ticket Price</h3>
                <p>Rp.<%= event.price %> </p>
                <form style="margin-top:20px;" method="post" action="">
                    <div class="form-group row">
                        <label for="inputQuantity" class="col-sm-2 col-form-label">Qty</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" id="inputQuantity" name="quantity" value="">
                        </div>
                    </div>
                    <input type="submit" class="btn btn-primary">
                </form>
            </div>
        </div>
    </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <%- include('../partials/script') %>
    <script>
      $('.carousel').carousel({
          interval: 2000
      })  
    </script>
  </body>
</html>