<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <%- include('../partials/meta') %>
    <!-- Bootstrap CSS -->
    <%- include('../partials/css') %>
  <style>
    .d-block.w-100{
      height: 75vh;
    }
  </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="#">Home</a>
          </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Event
            </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                  <a class="dropdown-item" href="#">Concert</a>
                  <a class="dropdown-item" href="#">Conference</a>
                  <a class="dropdown-item" href="#">Workshop</a>
                </div>
            </li>
        </ul>
          <h4>Welcome <%= customer.name %></h4>
        <div class="nav-item dropdown">
          <button class="nav-link dropdown-toggle" type="submit" style="margin: 0px 5px;" type="button" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Your Account</button>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="/customers/<%= customer.id%>/edit">Edit Profile</a>
              <a class="dropdown-item" href="/customers/<%= customer.id%>/logout">Logout</a>
          </div>
        </div>
      </div>
    </nav>
    <div id="carouselExampleIndicators" class="carousel slide carousel-fade" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="https://images.unsplash.com/photo-1492684223066-81342ee5ff30?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="https://cdn.pixabay.com/photo/2018/06/30/09/29/music-3507317_960_720.jpg" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="https://cdn.pixabay.com/photo/2015/05/07/11/02/guitar-756326_960_720.jpg" class="d-block w-100" alt="...">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
    </div>
          <!-- ticket -->
    <div style="margin:50px 20px;">
        <div class="row">
          <% for(let i=0; i<events.length; i++) { %>
            <div class="col">
              <div class="card" style="width: 18rem;">
                  <img class="card-img-top" src="<%= events[i].image %>" alt="Card image cap">
                  <div class="card-body">
                    <h5 class="card-title"><%= events[i].name %></h5>
                    <p class="card-text"> <%= events[i].description %> </p>
                    <p class="card-text"> Schedule: <%= events[i].dateToString() %> </p>
                      <% if(events[i].seats == events[i].maxSeats) { %>
                        <a href="/events/<%= events[i].id %>/order" class="btn btn-primary disabled">Sold Out</a>
                      <% } else if (events[i].seats < events[i].maxSeats) { %>
                        <a href="/events/<%= events[i].id %>/order" class="btn btn-primary">Order</a>
                        <% } %>
                  </div>
              </div>
            </div>
          <% } %>  
        </div>
    </div>
      
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <%- include('../partials/script') %>
    <script>
      $('.carousel').carousel({
          interval: 2000
      })  
    </script>
  </body>
</html>